csv_ej query="SELECT '999', CONCAT(a.harvest_name, '-', ds.datasourceName) AS combo_ds, a.harvest_url, a.harvest_contact, a.harvest_format, a.harvest_set FROM harvest.anagrafe AS a JOIN nbn.datasource AS ds ON a.id_datasource = ds.datasourceID  where a.harvest_materiale = 'ej' order by combo_ds;"
csv_td query="SELECT '999', a.harvest_name, a.harvest_url, a.harvest_contact, a.harvest_format, a.harvest_set FROM harvest.anagrafe AS a JOIN nbn.datasource AS ds ON a.id_datasource = ds.datasourceID  where a.harvest_materiale = 'td' order by a.harvest_name;"
